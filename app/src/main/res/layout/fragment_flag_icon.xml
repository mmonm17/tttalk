<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_flag_stroke"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/shape_rnd_rect_blue_thick"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:clickable="true"
        android:focusable="true"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/card_flag"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintTop_toTopOf="@id/img_flag_stroke"
        app:layout_constraintStart_toStartOf="@id/img_flag_stroke"
        app:layout_constraintEnd_toEndOf="@id/img_flag_stroke"
        app:layout_constraintBottom_toBottomOf="@id/img_flag_stroke"
        >
        <ImageView
            android:id="@+id/img_flag_content"
            android:src="@drawable/img_flag_ph"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>