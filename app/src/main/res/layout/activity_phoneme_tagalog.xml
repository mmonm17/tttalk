<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:strokeAttrs="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhonemeTagalogActivity">
    <ImageView
        android:id="@+id/img_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/img_bg"
        android:alpha="0.9" />

    <ImageView
        android:id="@+id/img_flag_english_stroke"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:layout_marginStart="36dp"
        android:src="@drawable/shape_rnd_rect_blue"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/card_flag_english"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintTop_toTopOf="@id/img_flag_english_stroke"
        app:layout_constraintStart_toStartOf="@id/img_flag_english_stroke"
        app:layout_constraintEnd_toEndOf="@id/img_flag_english_stroke"
        app:layout_constraintBottom_toBottomOf="@id/img_flag_english_stroke"
        >
        <ImageView
            android:src="@drawable/img_flag_ph"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_lvl"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:background="@drawable/shape_level_box"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/candy_beans"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="@string/Lebel"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&quot; BA &quot;"
        android:textSize="156sp"
        android:fontFamily="@font/candy_beans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txt_start"
        app:layout_constraintTop_toBottomOf="@+id/txt_lvl"
        android:textColor="@color/primary"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_mic"
        app:layout_constraintEnd_toEndOf="@id/txt_title"
        app:layout_constraintBottom_toBottomOf="@id/txt_title"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="4dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/orange"
        android:clickable="true"
        android:focusable="true"
        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_mic_none"
            app:tint="@android:color/white" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/mic_animation"
        app:layout_constraintEnd_toEndOf="@id/txt_title"
        app:layout_constraintStart_toStartOf="@+id/txt_title"
        app:layout_constraintTop_toTopOf="@id/txt_title"
        app:layout_constraintBottom_toBottomOf="@id/txt_title"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/red"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        >
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_mic_none"
            app:tint="@android:color/white" />
    </androidx.cardview.widget.CardView>


    <com.t_t_talk.StrokedTextView
        android:id="@+id/txt_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/candy_beans"
        android:gravity="center"
        android:text="@string/TayoyMagsimula"
        android:textColor="@color/green_light"
        style="@style/shadowEffect"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_lvl"
        strokeAttrs:textStrokeColor="@color/green_stroke"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginVertical="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_start"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>