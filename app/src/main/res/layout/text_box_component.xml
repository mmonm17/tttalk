<!-- res/layout/view_custom_component.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/yellow"
    android:padding="16dp">
    
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_read_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        />

    <TextView
        android:id="@+id/tv_dynamic_text"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_read_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/yellow_dark"
        android:fontFamily="@font/candy_beans"
        />

    <EditText
        android:id="@+id/et_user_input"
        android:background="@color/yellow_dark"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:hint="Type your answer here"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_read_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:fontFamily="@font/candy_beans"
        />

    <Button
        android:id="@+id/btn_read_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_submit"
        />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintTop_toBottomOf="@id/btn_read_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp" />



    <ImageView
        android:id="@+id/circular_feedback"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="-20dp"
        android:src="@drawable/shape_rnd_rect_green"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="@id/tv_dynamic_text"
        app:layout_constraintEnd_toEndOf="@id/tv_dynamic_text"
        app:layout_constraintBottom_toBottomOf="@id/tv_dynamic_text"

        />

    <androidx.cardview.widget.CardView
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintTop_toTopOf="@id/circular_feedback"
        app:layout_constraintStart_toStartOf="@id/circular_feedback"
        app:layout_constraintEnd_toEndOf="@id/circular_feedback"
        app:layout_constraintBottom_toBottomOf="@id/circular_feedback"
        >
        <ImageView
            android:src="@drawable/img_flag_ph"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
