<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/white"
    android:id="@+id/card_container"
    >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/card_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_margin="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:cardBackgroundColor="@color/primary">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="8dp"
                android:text="What are the characteristics of stuttered speech?"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:fontFamily="@font/candy_beans"
                />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:text="• Struggling to repeat...\n• Whole syllable...\n• Short words...\n• Stuttered block...\n• Prolongations in stuttering..."
                android:textColor="@android:color/black"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="12dp"
                android:textSize="16sp"
                android:fontFamily="@font/telegraf_regular"
                app:layout_constraintTop_toBottomOf="@id/card_title"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>